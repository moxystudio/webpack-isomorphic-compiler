{
  "name": "webpack-isomorphic-compiler",
  "version": "2.0.0",
  "description": "A compiler that makes your life easier if you are building isomorphic webpack powered apps, that is, single page applications with server-side rendering",
  "keywords": [
    "webpack",
    "isomorphic",
    "server-side",
    "rendering",
    "render",
    "compiler",
    "compilation"
  ],
  "author": "Andr√© Cruz <andre@moxy.studio>",
  "license": "MIT",
  "bugs": "https://github.com/moxystudio/webpack-isomorphic-compiler/issues",
  "homepage": "https://github.com/moxystudio/webpack-isomorphic-compiler",
  "repository": {
    "type": "git",
    "url": "git@github.com:moxystudio/webpack-isomorphic-compiler"
  },
  "main": "index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "jest --env node --coverage",
    "prerelease": "npm t && npm run lint",
    "release": "standard-version",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin master && npm publish"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "peerDependencies": {
    "webpack": ">=2.0.0 <4.0.0"
  },
  "dependencies": {
    "p-defer": "^1.0.0",
    "p-settle": "^2.0.0",
    "webpack-sane-compiler": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.0.1",
    "@commitlint/config-angular": "^4.3.0",
    "delay": "^2.0.0",
    "eslint": "^4.0.0",
    "eslint-config-moxy": "^4.1.0",
    "husky": "^0.14.0",
    "jest": "^22.0.0",
    "lint-staged": "^6.0.0",
    "lodash.escaperegexp": "^4.1.2",
    "p-try": "^1.0.0",
    "pify": "^3.0.0",
    "rimraf": "^2.6.1",
    "standard-version": "^4.2.0",
    "strip-ansi": "^4.0.0",
    "webpack": "^3.0.0"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "test/tmp/",
      "test/configs/"
    ],
    "coveragePathIgnorePatterns": [
      "test/"
    ]
  }
}
